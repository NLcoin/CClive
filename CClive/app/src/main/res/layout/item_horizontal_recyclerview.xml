<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="90dp"
              android:layout_height="90dp"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:padding="5dp"
    >

    <com.facebook.drawee.view.SimpleDraweeView
        android:padding="5dp"
        android:id="@+id/simpleDraweeView_item_horizontal"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#00000000"
        fresco:failureImage="@drawable/img_live_default_normal_cover"
        fresco:placeholderImage="@drawable/img_live_default_normal_cover"
        fresco:retryImage="@drawable/img_live_default_normal_cover"
        fresco:roundAsCircle="true"
        />

    <TextView
        android:id="@+id/textView_item_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="美女娱乐"
        android:maxLines="1"
        />
</LinearLayout>