<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        >
        <ImageButton
            android:id="@+id/imageButton_search_game"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/btn_search_default"
            android:background="#00ffffff"
            android:scaleType="fitXY"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游戏"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_gravity ="center_horizontal"
            />
        <ImageView
            android:layout_below="@+id/imageView_attention_game"
            android:id="@+id/imageView_liveFast_game"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/live_fast_main"
            android:layout_gravity ="right"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            />
        <ImageButton
            android:id="@+id/imageButton_scan_game"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/btn_qr_capture"
            android:background="#00ffffff"
            android:layout_gravity ="right"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            />
    </android.support.v7.widget.Toolbar>
    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
        <android.support.v4.view.ViewPager
            android:background="#fff"
            android:id="@+id/viewPager_ad_game"
            android:layout_width="match_parent"
            android:layout_height="130dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="#fff"
            >
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_horizontal_game"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="90dp"/>
            <ImageButton
                android:id="@+id/imageButton_subjects_game"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/btn_show_game_subjects"
                android:background="#00ffffff"
                android:scaleType="fitXY"
                />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_content_game"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </ScrollView>
        </LinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>
</LinearLayout>
